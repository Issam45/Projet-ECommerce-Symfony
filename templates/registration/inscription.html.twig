{% extends 'core/base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}



    <div class="row"> 
        <div class="card bg-dark text-light pb-3 border-light col-lg-8 mx-auto"> 
            <h1 class="mt-3 mb-2 text-light">Création d'un compte</h1>
            <p class="mb-4">Si vous possédez déjà un compte client, <a href="{{ path('app_connexion') }}">connectez-vous ici</a></p> 

            {% for flash in app.flashes('inscription')%}
                <div class="alert my-3 {{ flash.couleur }}">{{ flash.contenu }}</div> 
            {% endfor %}

            {# Debut du form #}
            {{ form_start(registrationForm, {'attr': {'class': 'needs-validation-register', 'novalidate': 'novalidate'}}) }}

                <div class="row"> 
                    <div class="col-12"> 
                        {{ form_row(registrationForm.courriel) }} 
                    </div>
                </div>

                <div class="row"> 
                    <div class="col-6"> 
                        {{ form_row(registrationForm.nom) }}
                    </div> 
                    <div class="col-6"> 
                        {{ form_row(registrationForm.prenom) }} 
                    </div> 
                </div> 
                
                <div class="row"> 
                    <div class="col-6"> 
                        {{ form_row(registrationForm.password.first) }} 
                    </div> 
                    <div class="col-6"> 
                        {{ form_row(registrationForm.password.second) }} 
                    </div> 
                </div> 

                <div class="row"> 
                    <div class="col-8"> 
                        {{ form_row(registrationForm.adresse, {'attr': {'class': ''}}) }} 
                    </div> 
                    <div class="col-4"> 
                        {{ form_row(registrationForm.ville, {'attr': {'class': ''}}) }} 
                    </div> 
                </div> 

                <div class="row"> 
                    <div class="col-4"> 
                        {{ form_row(registrationForm.codePostal, {'attr': {'class': 'txtCodePostal'}}) }} 
                    </div> 
                    <div class="col-4"> 
                        {{ form_row(registrationForm.province, {'attr': {'class': ''}}) }} 
                    </div> 
                    <div class="col-4"> 
                        {{ form_row(registrationForm.telephone, {'attr': {'class': 'txtTelephone'}}) }} 
                    </div> 
                </div> 

                <div class="row"> 
                    <div class="col-7"> 
                        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': ''}}) }} 
                    </div> 
                </div> 

                <div class="d-flex justify-content-center"> 
                    {{ form_row(registrationForm.valider) }} 
                </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>   
         
{% endblock %}

{% block stylesheets %} 
    
{% endblock %}

{% block javascripts %}
    <script defer src="https://cdn.jsdelivr.net/npm/jquery-mask-plugin@1.14.16/dist/jquery.mask.min.js"></script>
	<script defer src="{{ asset('scripts/inscription.js')}}"></script>
{% endblock %}
